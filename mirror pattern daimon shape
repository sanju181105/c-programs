#include<iostream>
using namespace std;
int main()
{
    int n,i,s,j,l;
    cin>>n;
    for(i=-n;i<=n;i++)
    {
        if(i<0)
         l=-i;
        else
         l=i;
         for(s=0;s<l;s++)
         {
             cout<<"  ";
         }
         for(j=0;j<2*(n-l)+1;j++)
         {
             cout<<"* ";
         }
         cout<<endl;
    }
    return 0;
}
